{
  "manifest_version": 3,
  "name": "Anime Voice Screen Reader",
  "version": "1.0.0",
  "description": "Reads selected text using the Anime Voice Reader server.",
  "action": {
    "default_title": "Anime Voice",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:8000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
